%YAML 1.1
---
timestamp: "@omm_timestamp@"

target:
    cpu: "@target_cpu@"
    vendor: "@target_vendor@"
    os: "@target_os@"

compilers:
    CPP: "@CPP@"
    CPPFLAGS: "@CPPFLAGS@"
    CC: "@CC@"
    MPICC: "@MPICC@"
    CFLAGS: "@CFLAGS@"
    FC: "@FC@"
    MPIFC: "@MPIFC@"
    FCFLAGS: "@FCFLAGS@"
    LDFLAGS: "@LDFLAGS@"
    LIBS: "@LIBS@"

defaults:
    debug_enable: "@omm_debug_enable_def@"
    examples_enable: "@omm_examples_enable_def@"
    linalg_enable: "@omm_linalg_enable_def@"
    mpi_enable: "@omm_mpi_enable_def@"
    linalg_incs: "@omm_linalg_incs_def@"
    linalg_libs: "@omm_linalg_libs_def@"
    psp_enable: "@omm_psp_enable_def@"

options:
    enable_debug: "@enable_debug@"
    enable_examples: "@enable_examples@"
    with_linalg: "@with_linalg@"
    with_mpi: "@with_mpi@"
    with_psp: "@with_psp@"

triggers:
    debug_enable: "@omm_debug_enable@"
    examples_enable: "@omm_examples_enable@"
    linalg_enable: "@omm_linalg_enable@"
    mpi_enable: "@omm_mpi_enable@"
    psp_enable: "@omm_psp_enable@"

inits:
    debug: "@omm_debug_type@"
    examples: "@omm_examples_type@"
    linalg: "@omm_linalg_type@"
    mpi: "@omm_mpi_type@"
    psp: "@omm_psp_type@"

deps:
    linalg_incs: "@omm_linalg_incs@"
    linalg_libs: "@omm_linalg_libs@"
    mpi_incs: "@omm_mpi_incs@"
    mpi_libs: "@omm_mpi_libs@"
    psp_incs: "@omm_psp_incs@"
    psp_libs: "@omm_psp_libs@"

linalg_internals:
    has_lapack: "@omm_linalg_has_lapack@"
    has_scalapack: "@omm_linalg_has_lapack@"

mpi_internals:
    cc_set: "@omm_mpi_cc_set@"
    cc_wrap: "@omm_mpi_cc_wrap@"
    fc_set: "@omm_mpi_fc_set@"
    fc_wrap: "@omm_mpi_fc_wrap@"
    fc_wrap: "@omm_mpi_incs@"
    fc_wrap: "@omm_mpi_libs@"

